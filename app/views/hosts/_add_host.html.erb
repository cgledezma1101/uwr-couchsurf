<div class="modal fade" id="addHostModal">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h4>Add host</h4>
			</div>
			<div class="modal-body">
				<form class="form-horizontal">
					<div class="form-group">
						<label class="col-sm-2 control-label">Name</label>
						<div class="col-sm-10">
							<input class="form-control j-name-input" type="text" />
							<span class="help-block">Please input a name</span>
						</div>
					</div>

					<div class="form-group">
						<label class="col-sm-2 control-label">Email</label>
						<div class="col-sm-10">
							<input class="form-control j-email-input" type="text" />
							<span class="help-block">Please input an email or phone</span>
						</div>
					</div>

					<div class="form-group">
						<label class="col-sm-2 control-label">Phone</label>
						<div class="col-sm-10">
							<input class="form-control j-phone-input" type="text" />
							<span class="help-block">Please input an email or phone</span>
						</div>
					</div>

					<div class="form-group">
						<label class="col-sm-2 control-label">Admin code</label>
						<div class="col-sm-10">
							<input class="form-control j-code-input" type="password" />
							<span class="help-block">Please input an admin code</span>
						</div>
					</div>
				</form>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
				<button type="button" class="btn btn-primary j-add-host-btn">Add</button>
				<%= image_tag "ajax-loader.gif", class: "ajax-loader" %>
			</div>
		</div>
	</div>
</div>
