<div class="host-index">
	<div class="title-container">
		<h1 class="title">UWR Couch Surfing</h1>
	</div>

	<div class="hosts-container">
		<% @hosts.each_with_index do |host, index| %>
		<div class="host-container">
			<div class="host-header <%= index == 0 ? 'first-header' : '' %>" data-toggle="collapse" data-target="#collapse<%= host.id %>">
				<h2>
					<span class="host-name"><%= host.name %></span>
					<span class="available-couches">
						(<%= pluralize(host.available_couches.length, "available couch") %>)
					</span>
				</h2>
			</div>
			<div class="collapse" id="collapse<%= host.id %>">
				<% host.couches.each do |couch| %>
				<div class="couch-container">
					<div class="couch-information col-sm-6">
						<h3 class="couch-information-title">Couch details</h2>
						<form class="form-horizontal">
							<div class="form-group">
								<label class="col-sm-2 control-label">Description</label>
								<div class="col-sm-10">
									<input class="form-control" type="text" value="<%= couch.description %>" />
								</div>
							</div>

							<div class="form-group">
								<label class="col-sm-2 control-label">Comments</label>
								<div class="col-sm-10">
									<textarea rows="5" class="from-control"><%= couch.host_comments %></textarea>
								</div>
							</div>

							<div class="form-group">
								<div class="col-sm-offset-2 col-sm-10">
									<button class="btn btn-primary">Update</button>
								</div>
							</div>
						</form>
					</div>
					<div class="occupant-information col-sm-6">
						<h3 class="occupant-information-title">Occupant details</h2>
						<form class="form-horizontal">
							<div class="form-group">
								<label class="col-sm-2 control-label">Name</label>
								<div class="col-sm-10">
									<input class="form-control" type="text" <%= couch.occupant_name.nil? ? '' : 'readonly=readonly' %> value="<%= couch.occupant_name %>" />
								</div>
							</div>

							<div class="form-group">
								<label class="col-sm-2 control-label">Phone</label>
								<div class="col-sm-10">
									<input class="form-control" type="text" <%= couch.occupant_name.nil? ? '' : 'readonly=readonly' %> value="<%= couch.occupant_phone %>" />
								</div>
							</div>

							<div class="form-group">
								<label class="col-sm-2 control-label">Email</label>
								<div class="col-sm-10">
									<input class="form-control" type="text" <%= couch.occupant_name.nil? ? '' : 'readonly=readonly' %> value="<%= couch.occupant_email %>" />
								</div>
							</div>

							<div class="form-group">
								<label class="col-sm-2 control-label">Comments</label>
								<div class="col-sm-10">
									<textarea class="form-control" rows="5" <%= couch.occupant_name.nil? ? '' : 'readonly=readonly' %>><%= couch.occupant_name %></textarea>
								</div>
							</div>

							<div class="form-group">
								<div class="col-sm-offset-2 col-sm-10">
									<% if couch.occupant_name.nil? %>
									<button class="btn btn-primary">Claim</button>
									<% else %>
									<button class="btn btn-danger">Remove</button>
									<% end %>
								</div>
							</div>
						</form>
					</div>
				</div>
				<% end %>
			</div>
		</div>
		<% end %>
	</div>
</div>
