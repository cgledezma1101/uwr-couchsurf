<div class="couch-container">
	<div class="couch-information col-sm-6" data-host-id="$hostId">
		<h3 class="couch-information-title">Couch details</h2>
		<form class="form-horizontal">
			<div class="form-group">
				<label class="col-sm-2 control-label">Description</label>
				<div class="col-sm-10">
					<input class="form-control j-description-input" type="text" />
					<span class="help-block">Please enter a description</span>
				</div>
			</div>

			<div class="form-group">
				<label class="col-sm-2 control-label">Comments</label>
				<div class="col-sm-10">
					<textarea rows="5" class="from-control j-comments-input" />
				</div>
			</div>

			<div class="form-group">
				<label class="col-sm-2 control-label">Admin code</label>
				<div class="col-sm-10">
					<input class="form-control j-code-input" type="password" />
					<span class="help-block">Invalid admin code</span>
				</div>
			</div>

			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<button class="btn btn-danger">Cancel</button>
					<button class="btn btn-primary j-save-couch-btn">Save</button>
					<%= image_tag "ajax-loader.gif", class: "ajax-loader" %>
				</div>
			</div>
		</form>
	</div>
</div>
